<persistence
        version="2.1"
        xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
http://xmlns.jcp.org/xml/ns/persistence_2_1.xsd">
    <persistence-unit name="SaleCar">
        <class>models.Car</class>
        <class>models.User</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.cars" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/server" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="password" />
            <property
                    name="javax.persistence.schema-generation.database.action"
                    value="create"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>